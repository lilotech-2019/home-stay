    });
    function isValidDate(dateString) {
        var regEx = /(?:0[1-9]|[12][0-9]|3[01])\/(?:0[1-9]|1[0-2])\/(?:19|20\d{2})/;
        if (!dateString.val().match(regEx)) return false;  // Invalid format
        dateString.val(dateString.val().slice(0, 10));
        return true;
    }
