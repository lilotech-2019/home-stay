        function getDate(element) {
            var date;
            try {
                date = $.datepicker.parseDate(dateFormat, element.value);
            } catch (error) {
                date = null;
            }
            return date;
        } 
        var checkFrom = $("#startDay");
        var checkTo = $("#endDay");
