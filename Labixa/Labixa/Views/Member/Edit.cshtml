@model Outsourcing.Data.Models.Appliant
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_BellazaLayout.cshtml";
    String emailP = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
}
<link href="~/Content/jp/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/jp/css/jquery.tagsinput.min.css" rel="stylesheet" />
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <form action="/Member/Edit" class="form-horizontal" method="post">
                <input type="hidden" name="Id" value="@Model.Id"/>
                <input type="hidden" name="Numer_3" value="@Model.Numer_3"/>
                <input type="hidden" name="Numer_2" value="@Model.Numer_2"/>
                <div class="col-lg-5">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right"><b>THÔNG TIN:</b> </label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Tên (*): </label>
                        <div class="col-sm-9">
                            <input type="text" name="Name" required value="@Model.Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Giới tính (*): </label>
                        <div class="col-sm-9">
                            <input type="radio" name="Gender" value="0" checked="@(Model.Gender == 0)" /> Nam
                            <input type="radio" name="Gender" value="1" checked="@(Model.Gender == 1)" /> Nữ
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Ngày sinh (*): </label>
                        <div class="col-sm-9">
                            <input type="date" name="DOB" required value="@Model.DOB.ToString("yyyy-MM-dd")" 
                                   pattern="(?:19|20)(?:(?:[13579][26]|[02468][048])-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))|(?:[0-9]{2}-(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-8])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:29|30))|(?:(?:0[13578]|1[02])-31)))"
                                   title="MM/dd/YYYY"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Địa chỉ (*): </label>
                        <div class="col-sm-9">
                            <input type="text" name="Address" required value="@Model.Address" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Số điện thoại (*): </label>
                        <div class="col-sm-9">
                            <input type="text" name="Phone" required value="@Model.Phone" pattern = "[0-9]{10,11}" title="10 tới 11 số"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Điện thoại di động (*): </label>
                        <div class="col-sm-9">
                            <input type="text" name="String_1" required value="@Model.String_1" pattern = "[0-9]{10,11}" title="10 tới 11 số"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Email (*): </label>
                        <div class="col-sm-9">
                            <input type="text" name="Email" required value="@Model.Email" pattern="@emailP"/>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Tên đăng nhập (*):</label>

                        <div class="col-sm-9">
                            <input type="text" disabled value="@Model.Username" />
                            <input type="hidden" name="Username" value="@Model.Username" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right">Mật khẩu (*):</label>

                        <div class="col-sm-9">
                            <input type="password" name="Password" required value="@Model.Password" pattern=".{6,}" title="Trên 5 ký tự"/>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right"><b>THÔNG TIN NGÂN HÀNG:</b> </label>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right">Ngân hàng (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="String_2" required value="@Model.String_2" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Chi nhánh (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="String_4" required value="@Model.String_4" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Số tài khoản (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="String_6" required value="@Model.String_6" pattern="[A-Za-z0-9]{3,}"/>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Chủ thẻ (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="ExpectedPosition" required value="@Model.ExpectedPosition" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right"><b>THÔNG TIN CHUYỂN HÀNG:</b> </label>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" >Tên (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="PSName" required value="@Model.PSName"/>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right" for="BlogCategoryId">Địa chỉ (*):</label>

                        <div class="col-sm-9">
                            <input type="text" name="PSAddress" required value="@Model.PSAddress" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-sm-3 control-label no-padding-right">Số điện thoại (*):</label>
                        <div class="col-sm-9">
                            <input type="text" name="PSPhoneNumber" required value="@Model.PSPhoneNumber" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-10" style="text-align:center">
                    <button type="submit" class="btn btn-primary center-block">Cập nhật</button>
                </div>
                <input type="hidden" name="numberStock" value="0"/>
            </form>
        </div>
    </div>
</div>


