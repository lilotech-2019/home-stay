                    <img alt="Awesome Image" <img src="~/Content/HMS/images/header/logo.png" class="default-logo"><img src="~/Content/HMS/images/header/logo2.png" alt="Awesome Logo" class="secondary-logo">
                </a>
            </div>
            <div id="main-navigation" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">@Html.Raw(Resources.Resources.HMS_Home)</a></li>
                    <li><a href="/gioi-thieu">@Html.Raw(Resources.Resources.HMS_AboutUs)</a></li>
                    <li><a href="/danh-sach-phong-ngan-han" onclick="localStorage.setItem('nameMenu', 'datphong')">@Html.Raw(Resources.Resources.HMS_ShortRoom)</a></li>
