    <div class="modal fade bd-example-modal-lg" id="exampleModalDeposit" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="min-height:70%">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="sec-header">
                        <h2 style="font-family: Arial, Helvetica, sans-serif">@Html.Raw(Resources.Resources.HMS_Deposit)</h2>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="book-left-content input_form">
                                <form id="contactBooking" action="/Home/Deposit"
                                      method="post">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="type" type="text" name="Type" placeholder="@Html.Raw(Resources.Resources.HMS_TypeForRent)" class="form-control">
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="address" type="text" name="Address" placeholder="@Html.Raw(Resources.Resources.HMS_AddressforRent)" class="form-control">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="price" type="text" name="Price" placeholder="@Html.Raw(Resources.Resources.HMS_PriceForRent)" class="form-control">
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="email" type="email" name="Description" placeholder="Email" class="form-control">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="name" type="text" name="Name" placeholder="@Html.Raw(Resources.Resources.HMS_Name)" class="form-control">
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="phone" type="text" name="Phone" placeholder="@Html.Raw(Resources.Resources.HMS_Phone)" class="form-control">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <button type="submit" class="res-btn" onclick="SendMess()">@Html.Raw(Resources.Resources.HMS_Send)</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@Html.Raw(Resources.Resources.HMS_Close)</button>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
