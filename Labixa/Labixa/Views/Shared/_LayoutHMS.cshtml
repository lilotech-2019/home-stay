    <div class="modal fade bd-example-modal-lg" id="exampleModalDeposit" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" id="model-dialog-cs">
            <div class="modal-content" style="min-height:55%">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="sec-header">
                        <h2 style="font-family: Arial, Helvetica, sans-serif">@Html.Raw(Resources.Resources.HMS_Deposit)</h2>
                        <!-- <h3 style="margin: auto;">Pick a room that best suits your taste and budget</h3> -->
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="book-left-content input_form">
                                <form id="formDeposit" action="@Url.Action("Deposit","Home")"
                                      method="post">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositType" type="text" name="Content" placeholder="@Html.Raw(Resources.Resources.HMS_TypeForRent)" class="form-control">

                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositType-none hidden">Vui lòng nhập loại hình cho thuê </span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositType-none hidden">Input type for rent</span></small>
                                            }
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositAddress" type="text" name="Address" placeholder="@Html.Raw(Resources.Resources.HMS_AddressforRent)" class="form-control">

                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositAddress-none hidden">Vui lòng nhập địa chỉ </span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositAddress-none hidden">Input your address </span></small>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositPrice" type="text" name="Price" placeholder="@Html.Raw(Resources.Resources.HMS_PriceForRent)" class="form-control">
                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositPrice-none hidden">Vui lòng nhập giá</span></small>
                                                <small><span class="text-danger error-DepositPrice hidden">Vui lòng nhập giá là số</span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositPrice-none hidden">Input price</span></small>
                                                <small><span class="text-danger error-DepositPrice hidden">Prices is a number integer</span></small>
                                            }
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositName" type="text" name="Name" placeholder="@Html.Raw(Resources.Resources.HMS_Name)" class="form-control">
                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositName-none hidden">Vui lòng nhập Tên </span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositName-none hidden">Input your Name</span></small>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositPhone" type="text" name="Phone" placeholder="@Html.Raw(Resources.Resources.HMS_Phone)" class="form-control">
                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositPhone-none hidden">Vui lòng nhập số điện thoại </span></small>
                                                <small><span class="text-danger error-DepositPhone hidden">Sai định dạng số điện thoại</span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositPhone-none hidden">Input your Phone Number</span></small>
                                                <small><span class="text-danger error-DepositPhone hidden">Invalid phone number</span></small>
                                            }
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 m0 col-xs-12">
                                            <input id="depositEmail" type="email" name="Description" placeholder="Email" class="form-control">
                                            @if (cookie != null && cookie.Value.Equals("vi"))
                                            {
                                                <small><span class="text-danger error-DepositEmail-none hidden">Vui lòng nhập email </span></small>
                                                <small><span class="text-danger error-DepositEmail hidden">Sai định dạng  Email</span></small>
                                            }
                                            else
                                            {
                                                <small><span class="text-danger error-DepositEmail-none hidden">Input your email </span></small>
                                                <small><span class="text-danger error-DepositEmail hidden">Invalid Email</span></small>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <button type="submit" class="res-btn" id="btn-submit-depositForm">@Html.Raw(Resources.Resources.HMS_Send)</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row" style="margin-bottom:15px;">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">@Html.Raw(Resources.Resources.HMS_Close)</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

