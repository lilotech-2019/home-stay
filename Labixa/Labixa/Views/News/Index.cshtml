@using PagedList.Mvc;
@model Labixa.ViewModels.BlogViewModel
@{
    HttpCookie cookie = Request.Cookies["_culture"];
    ViewBag.Title = "HomeStay, cho thuê phòng ngắn hạn , phòng dài hạn, nơi trãi nghiệm sự sang trọng, tiện nghi và thoải mái - DalatAmazing |dalatamazing.com.vn";
    ViewBag.Description = "Chúng tôi tin tưởng trong việc cung cấp dịch vụ khách hàng tuyệt vời." +
        "Nếu bạn có bất kỳ câu hỏi, ý kiến hoặc đề nghị, vui lòng liên hệ cho chúng tôi " +
        "Chúng tôi rất mong nhận được phản hồi từ bạn. ";
    ViewBag.Keywords = "dalatamazing.com.vn, dalatamazing, homestay, phòng đẹp , chỗ nghỉ dưỡng tốt";
    Layout = "~/Views/Shared/_LayoutHMS.cshtml";
}
<section class="row final-inner-header">
    <div class="container">
        <h2 class="this-title">News</h2>
    </div>
</section>
<section class="row final-breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li class="active">News</li>
        </ol>
    </div>
</section>
<section class="container clearfix common-pad-inner">
    <div class="row">
        <div class="col-md-4 col-sm-12 pull-left">
            <div class="single-sidebar-widget">

                <!-- Categories style--><!-- Popular Posts style--><div class="single-sidebar-widget-outer">
                    <div class="sec-title">
                        <h2>@Html.Raw(Resources.Resources.HMS_BlogNew)</h2>
                    </div>
                    <div class="popular-post">
                        @{
                            if (!Model.RelatedBlogs.Any())
                            {
                                <ul>
                                    @if (cookie.Value.Equals("vi"))
                                    {
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/1.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>Bài Tin Tức số 1</h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/2.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>Bài Tin Tức số 2</h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/3.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>Bài Tin Tức số 3</h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/1.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>New 01 </h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/2.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>New 2</h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                        <li class="img-cap-effect">
                                            <div class="img-box"><a href="/danh-sach-tin-tuc"><img src="~/Content/HMS/images/news/3.jpg" alt="" style="width:100px"></a></div>
                                            <div class="content">
                                                <a href="/danh-sach-tin-tuc">
                                                    <h4>New 3</h4>
                                                </a><span>6/4/2019</span>
                                            </div>
                                        </li>
                                    }

                                </ul>

                            }
                            else
                            {
                                <ul>
                                    @foreach (var item in Model.RelatedBlogs)
                                    {
                                        if (cookie.Value.Equals("vi"))
                                        {
                                            <li class="img-cap-effect">
                                                <div class="img-box"><a href="/tintuc/@item.Slug"><img src="@item.BlogImage" alt="" style="width:100px"></a></div>
                                                <div class="content">
                                                    <a href="/tintuc/@item.Slug">
                                                        <h4>@item.Title</h4>
                                                    </a><span>@item.DateCreated.GetValueOrDefault().ToShortDateString()</span>
                                                </div>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="img-cap-effect">
                                                <div class="img-box"><a href="/tintuc/@item.Slug"><img src="@item.BlogImage" alt="" style="width:100px"></a></div>
                                                <div class="content">
                                                    <a href="/tintuc/@item.Slug">
                                                        <h4>@item.TitleEnglish</h4>
                                                    </a><span>@item.DateCreated.GetValueOrDefault().ToShortDateString()</span>
                                                </div>
                                            </li>
                                        }

                                    }
                                </ul>

                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-sm-12 pull-right">
            <div class="single-post-wrapper">
                @{
                    if (!Model.ListBlogs.Any())
                    {
                        if (cookie.Value.Equals("vi"))
                        {
                            <article class="single-blog-post img-cap-effect">
                                <div class="img-box">
                                    <a href="/danh-sach-tin-tuc">
                                        <img src="~/Content/HMS/images/news/5.jpg" alt="" class="img-responsive">
                                    </a>
                                </div>
                                <h3><a href="/danh-sach-tin-tuc">Bài Tin Tức số 1</a></h3>
                                <p>
                                    Không khí se lạnh, từng cánh hoa dã quỳ vàng ươm trên từng triền núi, hàng thông xanh reo trong gió,
                                    những con đường vòng vo triền dốc mà du khách có thể đi bộ lang thang hàng giờ không biết mỏi mệt,
                                    chỉ để ngắm những mái hiên nhà đầy hoa hay một hàng mimosa vàng ươm trong nắng là những gì mà du
                                    khách muốn tận hưởng tại Đà Lạt
                                </p><a href="/danh-sach-tin-tuc" class="read-more btn submit">xem thêm</a>
                            </article>
                        }
                        else
                        {
                            <article class="single-blog-post img-cap-effect">
                                <div class="img-box">
                                    <a href="/danh-sach-tin-tuc">
                                        <img src="~/Content/HMS/images/news/5.jpg" alt="" class="img-responsive">
                                    </a>
                                </div>
                                <h3><a href="/danh-sach-tin-tuc">New-01</a></h3>
                                <p>
                                    Feeling the breeze cool air, the yellow wild sunflowers covering the mountains,
                                    the green pine trees whispering in the wind, the winding roads where you can walk for hours without tired.
                                    Located on Le Hong Phong Street – a central street of Da Lat, our 4-bedroom house
                                    will never let you down. The accommodation is designed in liberty and bohemian style with a
                                    lot of colors – giving a confused but reasonably and strange feeling.
                                </p><a href="/danh-sach-tin-tuc" class="read-more btn submit">read more</a>
                            </article>
                        }
                    }
                    else
                    {
                        foreach (var item in Model.ListBlogs)
                        {
                            if (cookie.Value.Equals("vi"))
                            {
                                <article class="single-blog-post img-cap-effect">
                                    <div class="img-box">
                                        <a href="/tintuc/@item.Slug">
                                            <img src="@item.BlogImage" alt="" class="img-responsive">
                                        </a>
                                    </div>
                                    <h3><a href="/tintuc/@item.Slug">@item.Title</a></h3>
                                    <p>@Html.Raw(item.Description)</p><a href="/tintuc/@item.Slug" class="read-more btn submit">xem thêm</a>
                                </article>
                            }
                            else
                            {
                                <article class="single-blog-post img-cap-effect">
                                    <div class="img-box">
                                        <a href="/tintuc/@item.Slug">
                                            <img src="@item.BlogImage" alt="" class="img-responsive">
                                        </a>
                                    </div>
                                    <h3><a href="/tintuc/@item.Slug">@item.TitleEnglish</a></h3>
                                    <p>@Html.Raw(item.DescriptionEnglish)</p><a href="/tintuc/@item.Slug" class="read-more btn submit">Read More</a>
                                </article>
                            }
                        }
                    }
                }
                <div>
                    @Html.PagedListPager(Model.ListBlogs, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</section>
