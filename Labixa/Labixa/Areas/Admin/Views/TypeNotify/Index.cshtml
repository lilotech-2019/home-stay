@model IEnumerable<Outsourcing.Data.Models.TypeNotify>
@using Outsourcing.Data.Models

@{
    ViewBag.Title = "Index";
}

@section scripts{
    <script src="/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
           
            <div class="table-header">Danh sách Message</div>

            <table id="TypeNotifyTable" class="table table-bordered table-striped table-fixed-header">
                <thead>
                    <tr role="row">
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Mail</th>
                        <th>Message</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                    @if (Model != null && Model.Any())
                    {
                        int count = 0;
                        foreach (var item in Model)
                        {
                            count++;
                            <tr class="odd">
                                <td class=" sorting_1">@count</td>
                                <td class="hidden-480 ">@item.Name</td>
                                <td class="hidden-480 ">@item.Note</td>
                                <td class="">@item.Description</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">



    $(document).ready(function () {
        var table = $("#TypeNotifyTable").DataTable();
        //var arrayfilter = [2, 4];

        createDropFilter(table, [2]);
        bindDropFilter(table, [6]);

    });

    function createDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });

            table.column(i).data().unique().sort().each(function (d, j) {
                filter1.append('<option value="' + d + '">' + d + '</option>');
            });

        });
    }
    function bindDropFilter(table, array) {
        array.forEach(function (i) {
            var selector = ".filter_" + i;
            var filter1 = $(selector);
            filter1.on('change', function () {
                table.column(i)
                    .search($(this).val())
                    .draw();
            });
        });
    }
</script>