@model Outsourcing.Data.Models.HotelCategory

@{
    ViewBag.Title = "Details";
}

@section breadcrumb
    {
    <li><a href="@Url.Action("Index")">HotelCategories</a></li>
    <li class="active">Details</li>
}
<div class="page-header">
    <h1>
        Quản Lý Chỉ Mục Khách Sạn
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            @Model.Name
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="col-xs-12 col-sm-9">
    <div class="row">
        @foreach (var item in Model.Hotels.Where(w=>w.Deleted != true))
        {

            <div style="height:735px" class="col-xs-6 col-sm-4 col-md-3">
                <div class="thumbnail search-thumbnail">
                    <img style="width:180px;height:200px;" class="media-object" src="@item.Rooms.FirstOrDefault().RoomImageMappings.FirstOrDefault().RoomImage.Url" />
                    <div class="caption">
                        <div class="clearfix">
                            <span class="pull-right label label-grey info-label">Số phòng: @item.Rooms.Where(w=>w.Deleted!=true).Count()</span>
                        </div>

                        <h3 class="search-title">
                            <a href="@Url.Action("Details","Hotels", new { id = item.Id})" class="blue">@item.Name</a>
                        </h3>
                        <p>@Outsourcing.Core.Common.StringConvert.Chop(item.Description,200)</p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>