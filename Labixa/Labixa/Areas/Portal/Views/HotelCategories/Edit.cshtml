@model Outsourcing.Data.Models.HotelCategory

@{
    ViewBag.Title = "Edit";
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/portal">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản lý Chi Phí</a>
            </li>
            <li class="active">Thêm mới Chi Phí</li>
        </ul>
    </div>
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Cập nhật Khách Sạn
            </div>
            @using (Html.BeginForm("Edit", null, FormMethod.Post, new {@class = "form-horizontal"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-horizontal">
                    <hr/>
                    @Html.ValidationSummary(true)

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Name, new {@class = "col-sm-3 control-label no-padding-right"})
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Name, null, new {@class = "col-xs-10 col-sm-5"})
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Status, new {@class = "col-sm-3 control-label no-padding-right"})
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Status, null, new {@class = "col-xs-10 col-sm-5"})
                            @Html.ValidationMessageFor(model => model.Status)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Description, new {@class = "col-sm-3 control-label no-padding-right"})
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Description, null, new {@class = "col-xs-10 col-sm-5"})
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-8">
                            <input type="submit" value="Edit" class="btn btn-warning" />
                            <a href="@Url.Action("Index","HotelCategories",new { hotelCategory = Request.Params["hotelCategory"]})" class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>