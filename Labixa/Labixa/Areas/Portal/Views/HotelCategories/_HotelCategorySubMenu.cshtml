@model Labixa.Areas.Portal.ViewModels.HotelCategory.HotelCategorySubMenuViewModel
@{
    var count = Model.Count;
    if (User.IsInRole(Role.Admin))
    {
        count += 1;
    }
}

<div class="invisible">
    <button data-target="#sidebar2" data-toggle="collapse" type="button" class="pull-left navbar-toggle collapsed">
        <span class="sr-only">Toggle sidebar</span>

        <i class="ace-icon fa fa-dashboard white bigger-125"></i>
    </button>

    <div id="sidebar2" class="sidebar h-sidebar navbar-collapse collapse ace-save-state">
        <ul class="nav nav-list">
            <li class="hover">
                <a href="@Url.Action("Index","Hotels")">
                    <i class="menu-icon fa fa-list-alt"></i>
                    <span class="menu-text">Tất Cả</span>
                </a>

                <b class="arrow"></b>
            </li>

            @foreach (var item in Model.HotelCategories)
            {
                <li class="hover">
                    <a href="@Url.Action("Index","Hotels", new { categoryId = item.Id })">
                        <i class="menu-icon fa fa-list-alt"></i>
                        <span class="menu-text">@item.Name</span>
                    </a>

                    <b class="arrow"></b>
                </li>
            }

            <li class="hover">
                <a href="@Url.Action("Create","Hotels", new {categoryId = Request.Params["categoryId"]})">
                    <i class="menu-icon fa fa-list-alt"></i>
                    <span class="menu-text">Thêm Khách Sạn</span>
                </a>

                <b class="arrow"></b>
            </li>

        </ul><!-- /.nav-list -->
    </div><!-- .sidebar -->
</div>