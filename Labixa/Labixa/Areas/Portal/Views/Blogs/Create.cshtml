@model Outsourcing.Data.Models.Blog

@{
    ViewBag.Title = "Create Blog";
}

@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản lý Tin tức</a>
            </li>
            <li class="active">Thêm mới Tin tức</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm mới Tin tức
            </div>
            @using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green icon icon-home bigger-120"></i>
                                General
                            </a>
                        </li>

                        <li class="">
                            <a data-toggle="tab" href="#tab2">
                                <i class="red  icon-rocket bigger-120"></i>
                                Chỉnh sửa SEO
                            </a>
                        </li>

                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="row">
                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.BlogCategoryId, "BlogCategoryId", new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.DropDownList("BlogCategoryId")
                                        @Html.ValidationMessageFor(model => model.BlogCategoryId)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.Title, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Title, null, new { @class = "col-xs-10 col-sm-5" })
                                        @Html.ValidationMessageFor(model => model.Title)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.TitleEnglish, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.TitleEnglish, null, new { @class = "col-xs-10 col-sm-5" })
                                        @Html.ValidationMessageFor(model => model.TitleEnglish)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.Content, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Content, null, new { @class = "col-xs-10 col-sm-5" })
                                        @Html.ValidationMessageFor(model => model.Content)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.ContentEnglish, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.ContentEnglish, null, new { @class = "col-xs-10 col-sm-5" })
                                        @Html.ValidationMessageFor(model => model.ContentEnglish)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.PictureId, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.PictureId, null, new { @class = "col-xs-10 col-sm-5" })
                                        @Html.ValidationMessageFor(model => model.PictureId)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.BlogImage, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.BlogImage, "GetImageFromElfinder")
                                        @Html.ValidationMessageFor(model => model.BlogImage)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @*@Html.EditorFor(model => model.Description, null, new { @class = "col-xs-10 col-sm-5" })*@
                                        @Html.TextAreaFor(model => model.Description)

                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>

                                <div class="form-group col-sm-6 col-md-12">
                                    @Html.LabelFor(model => model.DescriptionEnglish, new { @class = "col-sm-3 control-label no-padding-right" })
                                    <div class="col-sm-9">
                                        @*@Html.EditorFor(model => model.DescriptionEnglish, null, new { @class = "col-xs-10 col-sm-5" })*@
                                        @Html.TextAreaFor(model => model.DescriptionEnglish)

                                        @Html.ValidationMessageFor(model => model.DescriptionEnglish)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="tab2" class="tab-pane">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaTitle, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaTitle, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.MetaTitle)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaKeywords, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaKeywords, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.MetaKeywords)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaTitleEnglish, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaTitleEnglish, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.MetaTitleEnglish)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaDescription, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaDescription, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.MetaDescription)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaDescriptionEnglish, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaDescriptionEnglish, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.MetaDescriptionEnglish)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                        <a href="@Url.Action("Index","Blogs",null)" class="btn btn-warning">Back</a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<script>
    CKEDITOR.replace('Description');
    CKEDITOR.replace('DescriptionEnglish');
</script>