@model IEnumerable<Outsourcing.Data.Models.Hotel>

@{
    ViewBag.Title = "Hotel";
    var count = 0;
}
@section breadcrumb
    {
    <li class="active">Hotel</li>
}

<div class="page-header">
    <h1>
        Quản Lý Khách Sạn
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            overview
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
        <div class="invisible">
            <button data-target="#sidebar2" data-toggle="collapse" type="button" class="pull-left navbar-toggle collapsed">
                <span class="sr-only">Toggle sidebar</span>

                <i class="ace-icon fa fa-dashboard white bigger-125"></i>
            </button>

            <div id="sidebar2" class="sidebar h-sidebar navbar-collapse collapse ace-save-state">
                <ul class="nav nav-list">
                    <li class="hover">
                        <a href="@Url.Action("Index")">
                            <i class="menu-icon fa fa-list-alt"></i>
                            <span class="menu-text">Tất Cả</span>
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <li class="hover">
                        <a href="@Url.Action("Index")">
                            <i class="menu-icon fa fa-list-alt"></i>
                            <span class="menu-text">Dài Hạn</span>
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <li class="hover">
                        <a href="@Url.Action("Index")">
                            <i class="menu-icon fa fa-list-alt"></i>
                            <span class="menu-text">Ngắn Hạn</span>
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <li class="hover">
                        <a href="@Url.Action("Index")">
                            <i class="menu-icon fa fa-list-alt"></i>
                            <span class="menu-text">Ký Gửi</span>
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <li class="hover">
                        <a href="@Url.Action("Create", new {categoryId = Request.Params["categoryId"]})">
                            <i class="menu-icon fa fa-list-alt"></i>
                            <span class="menu-text">Thêm Khách Sạn</span>
                        </a>

                        <b class="arrow"></b>
                    </li>



                </ul><!-- /.nav-list -->
            </div><!-- .sidebar -->
        </div>
        <div class="panel panel-primary">

            <!-- /.box-header -->
            <div class="panel-body">
                <table id="datatable" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>

                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                Số phòng
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th class="hidden-480">
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th>@Resources.Resources.Action</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="center">
                                    @count
                                </td>
                                <td>
                                    <a href="@Url.Action("Create", "Rooms", new {hotelId = item.Id})" class="btn btn-xs btn-success" title="Tạo Phòng">
                                        <i class="fa fa-edit"></i> Tạo Phòng
                                    </a>
                                    <a href="@Url.Action("Create", "Costs", new {hotelId = item.Id})" class="btn btn-xs btn-success">
                                        Thêm Chi Phí
                                    </a>

                                    <a href="@Url.Action("Index", "Rooms", new {hotelId = item.Id})">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </a>
                                </td>
                                <td>
                                    @item.Rooms.Where(w => w.Deleted != true).Count()

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>

                                <td class="hidden-480">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class=" ">
                                    <div class="visible-md visible-lg  btn-group">
                                        <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-xs btn-secondary">
                                            <i class="fa fa-bookmark"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new {id = item.Id, categoryId = Request.Params["categoryId"], type = Request.Params["type"]})" class="btn btn-xs btn-info">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-xs btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        @if (item.Costs.Any())
                                        {
                                            <a href="@Url.Action("Preview", new {hotelId = item.Id})" class="btn btn-xs btn-primary">
                                                Xuất báo cáo
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <p class="box-title"><b>Total hotels till @string.Format(@"{0 : dddd, MMMM d, yyyy}", DateTime.Now) : </b><span class="label label-primary">@Model.Count()</span></p>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/admin/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/admin/js/jquery.dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            var table = $("#datatable").DataTable();

            createDropFilter(table, [2]);
            bindDropFilter(table, [5]);

        });

        function createDropFilter(table, array) {
            array.forEach(function (i) {
                var selector = ".filter_" + i;
                var filter1 = $(selector);
                filter1.on('change',
                    function () {
                        table.column(i)
                            .search($(this).val())
                            .draw();
                    });

                table.column(i).data().unique().sort().each(function (d, j) {
                    filter1.append('<option value="' + d + '">' + d + '</option>');
                });

            });
        }

        function bindDropFilter(table, array) {
            array.forEach(function (i) {
                var selector = ".filter_" + i;
                var filter1 = $(selector);
                filter1.on('change',
                    function () {
                        table.column(i)
                            .search($(this).val())
                            .draw();
                    });
            });
        }


        jQuery(function ($) {
            $('#sidebar2').insertBefore('.page-content');

            $('.navbar-toggle[data-target="#sidebar2"]').insertAfter('#menu-toggler');


            $(document).on('settings.ace.two_menu',
                function (e, event_name, event_val) {
                    if (event_name == 'sidebar_fixed') {
                        if ($('#sidebar').hasClass('sidebar-fixed')) {
                            $('#sidebar2').addClass('sidebar-fixed');
                            $('#navbar').addClass('h-navbar');
                        } else {
                            $('#sidebar2').removeClass('sidebar-fixed');
                            $('#navbar').removeClass('h-navbar');
                        }
                    }
                }).triggerHandler('settings.ace.two_menu', ['sidebar_fixed', $('#sidebar').hasClass('sidebar-fixed')]);
        });
    </script>
}