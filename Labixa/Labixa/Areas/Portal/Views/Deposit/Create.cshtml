@model Outsourcing.Data.Models.Deposit

@{
    ViewBag.Title = "Create Deposit";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản lý Ký Gửi</a>
            </li>
            <li class="active">Thêm Mới Ký Gửi</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm Mới Ký Gửi
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Name, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Content, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Content)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Note, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Note, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Note)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @*@Html.EditorFor(model => model.Description, "CkEditor")*@
                            @Html.TextAreaFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    CKEDITOR.replace('Description');
</script>