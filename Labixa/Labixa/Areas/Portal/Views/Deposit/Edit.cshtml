@model Outsourcing.Data.Models.Deposit

@{
    ViewBag.Title = "Edit Deposit";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/portal">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản lý Ký Gửi</a>
            </li>
            <li class="active">Chỉnh sửa Ký Gửi</li>
        </ul>
    </div>
}


<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Chỉnh sửa Ký Gửi
            </div>
            @using (Html.BeginForm("Edit", "Deposit", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group col-sm-6 col-md-12">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Name, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Email, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Content, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Content)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Note, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Note, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Note)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @*@Html.EditorFor(model => model.Description, "CkEditor")*@
                        @Html.TextAreaFor(model => model.Description)

                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a href="@Url.Action("Index","Deposit",null)" class="btn btn-warning">Back</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<script>
    CKEDITOR.replace('Description');
</script>