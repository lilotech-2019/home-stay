@model Outsourcing.Data.Models.Message

@{
    ViewBag.Title = "Create Message";
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/portal">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản Lý Tin Nhắn</a>
            </li>
            <li class="active">Thêm Mới Tin Nhắn</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm Mới Tin Nhắn
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group col-sm-6 col-md-12">
                    @Html.LabelFor(model => model.CustomerId, "CustomerId", new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.DropDownList("CustomerId")
                        @Html.ValidationMessageFor(model => model.CustomerId)
                    </div>
                </div>

                <div class="form-group col-sm-6 col-md-12">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Name, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group col-sm-6 col-md-12">
                    @Html.LabelFor(model => model.Address, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Address, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>
                </div>

                <div class="form-group col-sm-6 col-md-12">
                    @Html.LabelFor(model => model.Phone, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Phone, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Content, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Content)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Type, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Type)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Note, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Note, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Note)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Description, "CkEditor")
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a href="@Url.Action("Index")" class="btn btn-warning">Back</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
