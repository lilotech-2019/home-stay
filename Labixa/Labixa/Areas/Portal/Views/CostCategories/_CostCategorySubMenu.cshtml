@using Outsourcing.Data.Models
@model Labixa.Areas.Portal.ViewModels.CostCategory.CostCategorySubMenuViewModel
@{ 
    var count = Enum.GetValues(typeof(CostType)).Length + 1;
    string nameType = string.Empty;
}

<div class="invisible">
    <button data-target="#sidebar2" data-toggle="collapse" type="button" class="pull-left navbar-toggle collapsed">
        <span class="sr-only">Toggle sidebar</span>

        <i class="ace-icon fa fa-dashboard white bigger-125"></i>
    </button>

    <div id="sidebar2" class="sidebar h-sidebar navbar-collapse collapse ace-save-state">
        <ul class="nav nav-list">
            <li class="hover">
                <a href="@Url.Action("Index","Costs", new { hotelId = Request.Params["hotelId"] })">
                    <i class="menu-icon fa fa-list-alt"></i>
                    <span class="menu-text">Tất Cả</span>
                </a>

                <b class="arrow"></b>
            </li>

            @foreach (CostType item in Enum.GetValues(typeof(CostType)))
            {
                switch (item)
                {
                    case CostType.Others:
                        nameType = "Others";
                        break;
                    case CostType.Income:
                        nameType = "Thu";
                        break;
                    case CostType.Outcome:
                        nameType = "Chi";
                        break;
                }
                <li class="hover">
                    <a href="@Url.Action("Index","Costs", new { costType = item, hotelId = Request.Params["hotelId"]  })">
                        <i class="menu-icon fa fa-list-alt"></i>
                        <span class="menu-text">@nameType</span>
                    </a>

                    <b class="arrow"></b>
                </li>
            }

            <li class="hover">
                <a href="@Url.Action("Create","Costs", new {costType = Request.Params["costType"], hotelId = Request.Params["hotelId"]})">
                    <i class="menu-icon fa fa-list-alt"></i>
                    <span class="menu-text">Thêm Chi Phí</span>
                </a>

                <b class="arrow"></b>
            </li>



        </ul><!-- /.nav-list -->
    </div><!-- .sidebar -->
</div>