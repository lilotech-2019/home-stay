@model Outsourcing.Data.Models.RoomAsset

@{
    /**/

    ViewBag.Title = "Custom Create";
}

@section head{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <li><a href="@Url.Action("Index")">RoomAssets</a></li>
    <li class="active">Create</li>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm Mới Tài Sản
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.RoomId, "RoomId", new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.DropDownList("RoomId")
                            @Html.ValidationMessageFor(model => model.RoomId)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Name, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Price, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Price, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Quantity, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Quantity, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Quantity)
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-md-12">
                        @Html.LabelFor(model => model.Status, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Status, null, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.Status)
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Tạo mới" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
</div>
