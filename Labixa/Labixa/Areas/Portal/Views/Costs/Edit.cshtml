@model Outsourcing.Data.Models.HMS.Cost

@{
    ViewBag.Title = "Edit Cost";

}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed');
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="@Url.Action("Index")">Quản lý Chi Phí</a>
            </li>
            <li class="active">Chỉnh sửa Chi Phí</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                CreatCosts
            </div>
            @using (Html.BeginForm("Edit", "Costs", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green icon icon-home bigger-120"></i>
                                General
                            </a>
                        </li>

                        <li class="">
                            <a data-toggle="tab" href="#tab2">
                                <i class="red  icon-rocket bigger-120"></i>
                                Chỉnh sửa SEO
                            </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#tab3">
                                <i class="blue  icon-picture bigger-120"></i>
                                Contact
                            </a>
                        </li>

                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.HotelId, "HotelId", new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.DropDownList("HotelId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.HotelId)
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.CostCategoryId, "CostCategoryId", new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.DropDownList("CostCategoryId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.CostCategoryId)
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Name, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Amount, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Amount, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Amount)
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Type, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Type, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Type)
                                </div>
                            </div>



                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Description, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Status, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Status, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Status)
                                </div>
                            </div>

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.DateCreated, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.DateCreated, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.DateCreated)
                                </div>
                            </div>


                        </div>
                        <div id="tab2" class="tab-pane">
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.DateLogged, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.DateLogged, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.DateLogged)
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.LastModify, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.LastModify, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.LastModify)
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(model => model.Deleted, new { @class = "col-sm-3 control-label no-padding-right" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Deleted, null, new { @class = "col-xs-10 col-sm-5" })
                                    @Html.ValidationMessageFor(model => model.Deleted)
                                </div>
                            </div>
                        </div>
                        <div id="tab3" class="tab-pane fade in">


                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                        <input type="reset" value="Reset" class="btn" />
                    </div>
                </div>
            }
        </div>
        <a href="@Url.Action("Index","Costs",new { CostCategoryId = ViewBag.CostCategoryId})">Back To Link</a>

    </div>
</div>
