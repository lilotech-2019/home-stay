                        @Html.EditorFor(model => model.SharePercent, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.SharePercent)
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.Price, new { @class = "col-sm-3 control-label no-padding-right" })
