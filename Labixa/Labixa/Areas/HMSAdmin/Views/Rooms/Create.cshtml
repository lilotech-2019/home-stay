                        @Html.EditorFor(model => model.DiscountPercent, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.DiscountPercent)
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.Status, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Status, null, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.Status)
                    </div>
                </div>

