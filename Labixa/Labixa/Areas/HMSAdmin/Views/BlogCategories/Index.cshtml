

@model IEnumerable<Outsourcing.Data.Models.BlogCategories>
@Scripts.Render("~/Content/dataTable")

@{
    ViewBag.Title = "Index";
}

<h2>Tên trang</h2>
@Styles.Render("~/Content/dataTable")
<p>
    @Html.ActionLink("Tạo mới", "Create",null, new {@class="btn btn-primary"})
</p>
<div class="row">
    <div class="col-xs-12">
    <h3 class="header smaller lighter blue">Tên Trang</h3>
    <div class="table-header">Tên bảng</div>
<table id="datatable" class="table table-striped table-bordered table-hover">
 <thead>
 
       <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryParent.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Layout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsStaticPage)
        </th>
        <th></th>
    </tr>
 </thead>

 <tbody>



@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryParent.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Layout)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsStaticPage)
        </td>
<td>
                <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">

                    <a href="Edit/@item.Id" class="btn btn-xs btn-info">
                        <i class="icon-edit bigger-120"></i>
                    </a>
                    <a href="#" class="btn btn-xs btn-danger">
                        <i class="icon-trash bigger-120"></i>
                    </a>
                </div>
            </td>
    </tr>
}
 </tbody>
</table>
</div>
</div>



<script>
    $(document).ready(function() {
        /* Initialise the DataTable */

      $('#datatable').dataTable();
       
    });
</script>